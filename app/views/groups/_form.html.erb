<%=form_tag '/groups' do %>
   <div id="form-div">
    <!-- not correct yet -->
   <div class="inner_div">
   <%= label_tag "2/3rds Share" %>
   <%= check_box_tag (:two_thirds_share)  %>
   </div>

   <div class="inner_div">
   <%= label_tag "Full Share" %>
   <%= check_box_tag (:full_share) %>
   </div> <br>

   <p>---------------------------------</p>

   <div class="inner_div">
   <%#= label_tag "Boat ID #" %>
   <%#= number_field_tag :boat_id  %>
   </div>

   <div class="field">
   <%= label_tag :captain %><br />
   <%= text_field_tag :captain  %>
   </div>

   <div class="field">
   <%= label_tag :sailing_experience %><br />
   <%= text_area_tag(:sailing_experience, "", size: "50x10", :required => true )%> 
