<div class="container-fluid">
<h1>Edit this Boat</h1>

<%= form_tag("/boats/#{@boat.id}", :method => :patch) do %>
    <div id="form-div">
    <div class="inner_div">
    <%= label_tag %> Image <br />
    <%= text_field_tag :image_url, @boat.image_url %>
    </div>
    
    <div class="inner_div">
    <%= label_tag %> Name <br />
    <%= text_field_tag :name, @boat.name %>
    </div>
    
    <div class="inner_div">
      <%= label_tag %> Make <br />
      <%= text_field_tag :make, @boat.make %>
    </div>
    
    <div class="inner_div">
      <%= label_tag %> Size <br />
      <%= text_field_tag :size, @boat.size %>
    </div>
    
    <div class="inner_div">
      <%= label_tag %> Harbor <br />
      <%= text_field_tag :harbor, @boat.harbor %>
    </div>

     <div class="inner_div">
      <%= label_tag %> Shares Possible  <br />
      <%= text_field_tag :shares_possible, @boat.shares_possible %>
    </div>

     <div class="inner_div">
      <%= label_tag %> Full Share Price <br />
      <%= text_field_tag :full_share_price, @boat.full_share_price %>
    </div>

     <div class="inner_div">
      <%= label_tag %> Two-Thirds Share Price <br />
      <%= text_field_tag :two_thirds_share_price, @boat.two_thirds_share_price %>
    </div>

    <div class="inner_div">
      <%= label_tag %> Half Credit am MTWTH <br />
      <%= text_field_tag :half_credit_AM_MTWTH, @boat.half_credit_AM_MTWTH %>
    </div>

    <div class="inner_div">
      <%= label_tag %> Half Credit pm MTWTH <br />
      <%= text_field_tag :half_credit_PM_MTWTH, @boat.half_credit_PM_MTWTH%>
    </div>
    <div class="inner_div">
      <%= label_tag %> Half Credit am Fri <br />
      <%= text_field_tag :half_credit_AM_F, @boat.half_credit_AM_F %>
    </div>
    <div class="inner_div">
      <%= label_tag %> Half Credit pm Fri <br />
      <%= text_field_tag :half_credit_PM_F, @boat.half_credit_PM_F %>
    </div>
    <div class="inner_div">
      <%= label_tag %> Half Credit am Sat <br />
      <%= text_field_tag :half_credit_AM_SAT, @boat.half_credit_AM_SAT %>
    </div>
    <div class="inner_div">
      <%= label_tag %> Half Credit pm Sat <br />
      <%= text_field_tag :half_credit_PM_SAT, @boat.half_credit_PM_SAT %>
    </div>
    <div class="inner_div">
      <%= label_tag %> Half Credit am Sun <br />
      <%= text_field_tag :half_credit_AM_SUN, @boat.half_credit_PM_SAT %>
    </div>
     <div class="inner_div">
      <%= label_tag %> Half Credit pm Sun <br />
      <%= text_field_tag :half_credit_PM_SUN, @boat.half_credit_PM_SUN %>
    </div>
    <div class="inner_div">
      <%= label_tag %> Full Credit MTWTH <br />
      <%= text_field_tag :full_credit_MTWTH, @boat.full_credit_MTWTH %>
    </div>
    <div class="inner_div">
      <%= label_tag %> Full Credit Fri <br />
      <%= text_field_tag :full_credit_F, @boat.full_credit_F %>
    </div>
    <div class="inner_div">
      <%= label_tag %>Full Credit Sat <br />
      <%= text_field_tag :full_credit_SAT, @boat.full_credit_SAT %>
    </div>
    <div class="inner_div">
      <%= label_tag %> Full Credit Sun <br />
      <%= text_field_tag :full_credit_SUN, @boat.full_credit_SUN %>
    </div>
    <div class="inner_div">
      <%= label_tag %>  Two-Thirds Credits Total <br />
      <%= text_field_tag :two_thirds_credits_total, @boat.two_thirds_credits_total %>
    </div>
    <div class="inner_div">
      <%= label_tag %> Full Credits Total <br />
      <%= text_field_tag :full_credits_total, @boat.full_credits_total %>
    </div>
  </div>
  <div>
    <%= submit_tag "Submit Changes", :class => "submit_boat_changes" %>
  </div>


<% end %>
</div>