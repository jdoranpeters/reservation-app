
<div class="container-fluid">

<table class="table table-striped table-bordered table-responsive">
  <thead>
    <tr>
    	<th class="bg-primary">Reservation Date*</th>
    	<th class="bg-primary">Boat Reserved</th>
    	<th class="bg-primary">Group ID</th>
      <th class="bg-primary">Group Members</th>
    	<th class="bg-primary">Reserved By</th>
    	<th class="bg-primary">Reserved On</th>
    	<th class="bg-primary">Credits Used</th>
    	<th class="bg-primary">Credits Remaining</th>
    </tr>
  </thead>
  <tbody>
  	<tr>
  		<% if @reservation.full_day_block? %>
			<td>Full day reserved for <%= @reservation.date_reserved.strftime("%A, %D") %></td>
			<% elsif @reservation.am_block? %>
			<td>AM block reserved for <%= @reservation.date_reserved.strftime("%A, %D") %></td>
			<% elsif @reservation.pm_block? %>
			<td>PM block reserved for <%= @reservation.date_reserved.strftime("%A, %D") %></td>
			<% else %>
			<% end %>
  		<td><%= @reservation.group.boat.name %></td>
  		<td><%= @reservation.group.id %></td>
      <td><% @reservation.group.users.each do |user|%>
      <p><%= user.first_name %> <%= user.last_name %> </p>
      <% end %></td>
  		<td><%= @reservation.user.first_name %>  <%= @reservation.user.last_name %></td>
      <td><%= @reservation.created_at.strftime("%A, %D") %></td>
      <td><%= @reservation.group.credits_used %></td>
      <td><%= @reservation.group.credits %></td>
  	</tr>
  </tbody>
 </table>

<h4>AM Block: 9am-3pm</h4><h4> PM Block: 4pm-8am the following day</h4><h4> Full-Day Block: 9am-8am the following day </h4>
</div>